<div class="container mt-4 border border-dark">
        <div class="row">
            <div class="mb-4 mt-2 col-12">
                <h1>Team Members</h6>
            </div>
            <div class="row mb-4 align-items-center justify-content-center">
             {% for teamMember in team %}
              
                  <div class="col-lg-2 col-md-4 col-xs-6 flow-direction-row">
                      <img class="img-fluid w-100" src="{{ asset('img/' ~ teamMember.avatar) }}" alt="">
                  <div class="bg-light text-center p-4">
                      <h5>{{ teamMember.name }}</h5>
                      <p class="m-0">{{ teamMember.designation }}</p>
                      <div class="d-flex align-items-center row mt-1 mb-1">
                            <a class="col-4" href="#"><i class="fa-brands fa-twitter"></i></a>
                            <a class="col-4" href="#"><i class="fa-brands fa-square-facebook"></i></a>
                            <a class="col-4" href="#"><i class="fa-brands fa-linkedin"></i></a>
                      </div>
                  </div>
              </div>
            {% endfor %}
            </div>
        </div>
    </div>